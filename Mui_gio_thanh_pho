                { city: "Saint Petersburg", country: "Nga", timezone: "Europe/Moscow", flag: "üá∑üá∫" },
                { city: "B·∫Øc Kinh", country: "Trung Qu·ªëc", timezone: "Asia/Shanghai", flag: "üá®üá≥" },
                { city: "Th∆∞·ª£ng H·∫£i", country: "Trung Qu·ªëc", timezone: "Asia/Shanghai", flag: "üá®üá≥" },
                { city: "Tokyo", country: "Nh·∫≠t B·∫£n", timezone: "Asia/Tokyo", flag: "üáØüáµ" },
                { city: "Osaka", country: "Nh·∫≠t B·∫£n", timezone: "Asia/Tokyo", flag: "üáØüáµ" },
                { city: "New Delhi", country: "·∫§n ƒê·ªô", timezone: "Asia/Kolkata", flag: "üáÆüá≥" },
                { city: "Mumbai", country: "·∫§n ƒê·ªô", timezone: "Asia/Kolkata", flag: "üáÆüá≥" },
                { city: "Ulaanbaatar", country: "M√¥ng C·ªï", timezone: "Asia/Ulaanbaatar", flag: "üá≤üá≥" },
                { city: "H√† N·ªôi", country: "Vi·ªát Nam", timezone: "Asia/Ho_Chi_Minh", flag: "üáªüá≥" },
                { city: "H·ªì Ch√≠ Minh", country: "Vi·ªát Nam", timezone: "Asia/Ho_Chi_Minh", flag: "üáªüá≥" }
            ];

            const clocksContainer = document.getElementById('clocks');

            function updateClocks() {
                clocksContainer.innerHTML = '';
                
                cities.forEach(city => {
                    const now = new Date();
                    const options = { 
                        timeZone: city.timezone,
                        hour: '2-digit', 
                        minute: '2-digit', 
                        second: '2-digit',
                        hour12: false
                    };
                    const timeStr = now.toLocaleTimeString('vi-VN', options);
                    
                    const dateOptions = {
                        timeZone: city.timezone,
                        weekday: 'long',
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    };
                    const dateStr = now.toLocaleDateString('vi-VN', dateOptions);
                    
                    const clockCard = document.createElement('div');
                    clockCard.className = 'clock-card';
                    clockCard.innerHTML = `
                        <div class="city">${city.city} ${city.flag}</div>
                        <div class="country">${city.country}</div>
                        <div class="time">${timeStr}</div>
                        <div class="date">${dateStr}</div>
                    `;
                    
                    clocksContainer.appendChild(clockCard);
                });
            }

            // C·∫≠p nh·∫≠t ƒë·ªìng h·ªì m·ªói gi√¢y
            updateClocks();
            setInterval(updateClocks, 1000);
        });
